extends ../layouts/common
block content
	
	h1 Login
	if errors 
		each error in errors
			.alert.alert-danger= error	
	form(action="/auth/login", method="POST")
		.form-group
			lable(for="email") Email
			input(name="email", type="text", class="form-control", value= values ? values.email : "")
		.form-group
			lable(for="password") Password
			input(name="password", type="password", class="form-control", value= values ? values.password : "")
		button(class="btn btn-primary") Login