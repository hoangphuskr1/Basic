extends ../layouts/common
block content
	h1 
		span.mr-2 Users
		a.btn.btn-primary(href="/users/create") New
	.d-flex.align-items-center
		form.ml-auto(action="/users/search", method="GET", class="d-flex")
			input(type = "text", name="q", class="form-control")
			button(class="btn btn-primary ml-2") Search
	table.table
		tr
			th Name
			th Phone
			th Action
		each user in users
			tr
				td= user.name
				td= user.phone
				td= user.action
					a.btn.btn-light.mr-1(href='/users/' + user.id) View
					a.btn.btn-light(href='/users/rm/'+ user.id) Delete