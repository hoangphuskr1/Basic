extends ../layouts/common
block content
	
	h1 Create Users
	if errors 
		each error in errors
			.alert.alert-danger= error	
	form(action="/users/create", method="POST")
		.form-group
			lable(for="name") Name
			input(name="name", type="text", class="form-control", value= values ? values.name : "")
		.form-group
			lable(for="name") Phone
			input(name="phone", type="text", class="form-control", value= values ? values.phone : "")
		button(class="btn btn-primary") Create